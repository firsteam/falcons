				</div>
			</div>
		</div>
<script>
function register()
{

  var frm  = document.forms['formUser'];
  var username  = Utils.trim(frm.elements['username'].value);
  var email  = frm.elements['email'].value;
  var password  = Utils.trim(frm.elements['password'].value);
  var confirm_password = Utils.trim(frm.elements['confirm_password'].value);
  var checked_agreement = frm.elements['agreement'].checked;
  var msn = frm.elements['extend_field1'] ? Utils.trim(frm.elements['extend_field1'].value) : '';
  var qq = frm.elements['extend_field2'] ? Utils.trim(frm.elements['extend_field2'].value) : '';
  var home_phone = frm.elements['extend_field4'] ? Utils.trim(frm.elements['extend_field4'].value) : '';
  var office_phone = frm.elements['extend_field3'] ? Utils.trim(frm.elements['extend_field3'].value) : '';
  var mobile_phone = frm.elements['mobile'] ? Utils.trim(frm.elements['mobile'].value) : '';
  var passwd_answer = frm.elements['passwd_answer'] ? Utils.trim(frm.elements['passwd_answer'].value) : '';
  var sel_question =  frm.elements['sel_question'] ? Utils.trim(frm.elements['sel_question'].value) : '';
  var reg_type =  frm.elements['reg_type'] ? Utils.trim(frm.elements['reg_type'].value) : 0;
  var captcha =  frm.elements['captcha'] ? Utils.trim(frm.elements['captcha'].value) : 0;
  

  var msg = "";
  // 检查输入
  var msg = '';
  if (username.length == 0)
  {
    msg += username_empty + '\n';
  }
  else if (username.match(/^\s*$|^c:\\con\\con$|[%,\'\*\"\s\t\<\>\&\\]/))
  {
    msg += username_invalid + '\n';
  }
  else if (username.length < 3)
  {
    msg += username_shorter + '\n';
  }

  if(reg_type==0)
  {
	if (email.length == 0)
	{
	  msg += email_empty + '\n';
	}
	else
	{
	  if ( ! (Utils.isEmail(email)))
	  {
		msg += email_invalid + '\n';
	  }
	}
  }
  
  
  if (password.length == 0)
  {
    msg += password_empty + '\n';
  }
  else if (password.length < 6)
  {
    msg += password_shorter + '\n';
  }
  if (/ /.test(password) == true)
  {
	msg += passwd_balnk + '\n';
  }

 
  
  if (confirm_password != password )
  {
    msg += confirm_password_invalid + '\n';
  }
  if(checked_agreement != true)
  {
    msg += agreement + '\n';
  }

  if (msn.length > 0 && (!Utils.isEmail(msn)))
  {
    msg += msn_invalid + '\n';
  }

  if (qq.length > 0 && (!Utils.isNumber(qq)))
  {
    msg += qq_invalid + '\n';
  }

  if (office_phone.length>0)
  {
    var reg = /^[\d|\-|\s]+$/;
    if (!reg.test(office_phone))
    {
      msg += office_phone_invalid + '\n';
    }
  }
  if (home_phone.length>0)
  {
    var reg = /^[\d|\-|\s]+$/;

    if (!reg.test(home_phone))
    {
      msg += home_phone_invalid + '\n';
    }
  }
  
  

  if (msg.length > 0)
  {
    alert(msg);
    return;
  }
  
  var params=$('#formUser').serialize()
  $.ajax({
			url:"register.php",
			dataType:'json',
			type:"POST",
			data:params,
			beforeSend:function() {  
			   $('#register_btn').val('Loading...').attr('disabled',true);
			},  
			complete:function(result) {  
			   
			},  
			success:function(result){
				if(result.err_no==0)
				{
				   window.location.href=result.back_act;
				   return;
				}
				else
				{
				   $('#register_btn').val('Register').attr('disabled',false);
				   alert(result.err_msg);	
				   return;
				}
			},
			error:function(){
				$('#register_btn').val('Register').attr('disabled',false);
			}
	});
	 

}
		</script>
		<!--{/if}-->
		<!--#会员注册界面 end-->
		<div class="blank"></div>
	</div>
	<!-- #BeginLibraryItem "/library/page_footer.lbi" -->
	<!-- #EndLibraryItem -->
	<script type="text/javascript">
	var process_request = "{$lang.process_request}";
	{foreach from=$lang.passport_js item=item key=key}
	var {$key} = "{$item}";
	{/foreach}
	var username_exist = "{$lang.username_exist}";
	
	$().ready(function(){
		//设置高度
		//$(".mcon").height($(".uc_box").height());
		
		$("#formUser").submit(function(){
			return register('{$register_type}');
